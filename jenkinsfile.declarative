pipeline{
agent any
tools{maven 'Maven'}
stages{
  stage(checkout){
        steps{
          git git@github.com:bhagyashree3235/simplerepo.git
        }
  }
  stage(Build){
        steps{
            sh "mvn clean install"
        }
  }
stage(Test){
        steps{
            sh "mvn test"
        }
}
stage(Deploy){
        steps{
            sh "sudo cp /target/*.war /opt/tomcat/webapps/"
        }
}
}
post{
    success{
              echo "all stages cmplete successfully" 
          }
}
}
